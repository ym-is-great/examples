{
  "name": "Chrome Extension Example",
  "version": "1.0",
  "description": "Hello, Chrome extension!",
  "manifest_version": 2,
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "24": "images/icon_24.png",
      "32": "images/icon_32.png"
    },
    "default_popup": "popup.html"
  }
}